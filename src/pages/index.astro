---
import MainLayout from "@/layouts/main-layout.astro";
import StudioBalls from "@/components/automa/popcorn-box";
---

<MainLayout title="Automa">
  <div class="bg-background min-h-[calc(100vh-64px)] flex flex-col items-center justify-center relative overflow-hidden">
    <!-- Centered Canvas -->
    <div class="relative z-10 flex items-center justify-center">
      <StudioBalls client:load />
    </div>

    <!-- Bottom Detail -->
    <div class="absolute bottom-12 left-0 right-0 flex justify-center z-10 opacity-40 animate-pulse pointer-events-none">
      <div class="text-[10px] uppercase tracking-[0.5em] text-muted-foreground">
        Move mouse quickly to strike particles
      </div>
    </div>
  </div>
</MainLayout>

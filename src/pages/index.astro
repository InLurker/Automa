---
import MainLayout from "@/layouts/main-layout.astro";
---

<MainLayout title="Automa">
  <div class="bg-background min-h-[calc(100vh-64px)] flex flex-col items-center justify-center relative overflow-hidden">
    <!-- Content Layer -->
    <section class="container relative z-10 flex flex-col items-center text-center">
      <div class="space-y-6 max-w-2xl px-4">
        <h1 class="text-6xl md:text-8xl font-bold tracking-tighter text-foreground">
          Automa
        </h1>
        <p class="text-lg md:text-xl text-muted-foreground font-medium leading-relaxed">
          A minimalist zen playground for 
          <span class="text-foreground">interactive kinetic art</span> 
          and generative animations.
        </p>
        
        <div class="pt-4">
          <a
            href="/automa/matrix-trails"
            class="inline-flex items-center justify-center rounded-full text-sm font-semibold 
                   ring-offset-background transition-all h-12 px-10 
                   bg-foreground text-background hover:scale-105 active:scale-95
                   shadow-[0_0_20px_rgba(255,255,255,0.15)]"
          >
            Start Exploring
          </a>
        </div>
      </div>
    </section>
  </div>
</MainLayout>

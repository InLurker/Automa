---
import MainLayout from "@/layouts/main-layout.astro";
import { Button } from "@/components/ui/button";
---

<MainLayout title="Dashboard" description="Your account dashboard">
  <div class="container py-10">
    <div class="mx-auto max-w-4xl space-y-8">
      <div class="flex items-center justify-between">
        <h1 class="text-3xl font-bold">Dashboard</h1>
      </div>
      
      <div class="rounded-lg border bg-card p-6 shadow-sm">
        <h2 class="mb-4 text-xl font-semibold">Dashboard Demo</h2>
        <div class="bg-muted/50 text-sm p-4 rounded-md">
          <p class="text-muted-foreground">
            This is a static demo page. Authentication has been disabled.
          </p>
          <p class="text-muted-foreground mt-2">
            Check out the <a href="/blog" class="underline">blog</a> or <a href="/docs/getting-started" class="underline">documentation</a> instead!
          </p>
        </div>
      </div>
      
      <div class="grid gap-6 md:grid-cols-2">
        <div class="rounded-lg border bg-card p-6 shadow-sm">
          <h3 class="mb-4 text-lg font-medium">Documentation</h3>
          <p class="mb-4 text-sm text-muted-foreground">
            Learn how to use this template and customize it.
          </p>
          <Button variant="outline" class="w-full" asChild>
            <a href="/docs/getting-started">View Docs</a>
          </Button>
        </div>
        
        <div class="rounded-lg border bg-card p-6 shadow-sm">
          <h3 class="mb-4 text-lg font-medium">Blog Posts</h3>
          <p class="mb-4 text-sm text-muted-foreground">
            Read our latest articles and updates.
          </p>
          <Button variant="outline" class="w-full" asChild>
            <a href="/blog">Read Blog</a>
          </Button>
        </div>
      </div>
    </div>
  </div>
</MainLayout>

---
import MainLayout from "@/layouts/main-layout.astro";
import { Icon } from "astro-icon/components";
---

<MainLayout
  title="Newsletter"
  description="Subscribe to our newsletter for updates."
  mainClass="bg-background-200"
>
  <div class="relative flex w-full min-h-svh items-center justify-center">
    <div
      class="px-4 py-5 sm:p-6 bg-background border rounded-xl overflow-hidden -mt-36"
    >
      <div class="flex flex-col gap-y-5 w-full max-w-sm">
        <div class="space-y-3">
          <Icon name="lucide:mail" class="size-10" />
          <h1 class="text-2xl font-heading tracking-wide">
            Subscribe to the newsletter
          </h1>
          <p class="text-sm text-muted-foreground">
            Stay updated with our latest news and updates about UX/UI and astronomy!
          </p>
          <p class="text-sm text-muted-foreground">
            This is a static demo page. Check out our <a href="/blog" class="underline">blog</a> instead!
          </p>
        </div>

        <div class="space-y-4">
          <div class="space-y-2">
            <label for="email" class="text-sm font-medium leading-none">
              Email
            </label>
            <input
              id="email"
              type="email"
              placeholder="you@example.com"
              disabled
              class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background opacity-50 cursor-not-allowed"
            />
            <p class="text-muted-foreground text-[13px]">
              <i>Form disabled - this is a static site demo</i>
            </p>
          </div>
          <button
            disabled
            class="w-full inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors h-10 px-4 py-2 bg-primary text-primary-foreground opacity-50 cursor-not-allowed"
          >
            Subscribe
          </button>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
